<% if (locals.card_type) { %>
<div class="rf-card rf-col-md-2 rf-ml-2w rf-mb-2w">
  <div class="rf-card__img" style="background-color: var(--<%= bg_color %>);">
  	<h3 class="rf-h4" style="color: var(--<%= fg_color %>);"><%= bg_color %></h3>
  </div>
</div>
<% } else { %>
<div class="rf-col-md-12 rf-m-4v rf-p-2v" style="background-color: var(--<%= bg_color %>); color: var(--<%= fg_color %>);">
	<p>Ce texte est en <code><%= fg_color %></code> sur fond <code><%= bg_color %></code>.</p>
</div>
<% } %>