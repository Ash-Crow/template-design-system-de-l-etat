<div class="rf-container-fluid <%= section.cssClass %> rf-centered rf-pb-6v rf-pt-2v">
  <div class="rf-grid-row rf-grid-row--center">
    <div class="rf-col-6"><h3 class="rf-h2"><%= section.title %></h3></div>
  </div>
  <div class="rf-grid-row rf-grid-row--center rf-grid-row--gutter">
    <div class="rf-col-xs-12 rf-col-md-3 rf-p-3v">
      <div class="rf-text--lg rf-pb-2v"><%= section.parts[0].title %></div>
      <div class="rf-text--sm"><%= section.parts[0].text %></div>
    </div>
    <div class="rf-col-xs-12 rf-col-md-3 rf-p-3v">
      <div class="rf-text--lg rf-pb-2v"><%= section.parts[1].title %></div>
      <div class="rf-text--sm"><%= section.parts[1].text %></div>
    </div>
    <div class="rf-col-xs-12 rf-col-md-3 rf-p-3v">
      <div class="rf-text--lg rf-pb-2v"><%= section.parts[2].title %></div>
      <div class="rf-text--sm"><%= section.parts[1].text %></div>
    </div>
  </div>
</div>
