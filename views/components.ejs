<%- include('partials/header') -%>
<main role="main" id="contenu">	
  <div class="fr-container fr-pb-6w fr-pt-6w">
    <div class="fr-grid-row fr-grid-row--gutters fr-b__two-col">

      <!-- Menu -->
      <div class="fr-col-xs-12 fr-col-md-3">
        <nav class="fr-sidemenu fr-sidemenu--sticky" role="navigation" aria-label="Menu latéral">
          <div class="fr-sidemenu__inner">
            <button class="fr-sidemenu__btn" aria-controls="sidemenu-254" aria-expanded="false">Dans cette rubrique</button>
            <div class="fr-collapse" id="sidemenu-254">
              <div class="fr-sidemenu__title">Composants</div>
              <ul class="fr-sidemenu__list">
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#boutons" target="_self">Boutons</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#accordéons" target="_self">Accordéons</a>
                </li>
                <li class="fr-sidemenu__item">
                  <a class="fr-sidemenu__link" href="#cartes" target="_self">Cartes</a>
                </li>
              </ul>
            </div>
          </div>
          <%- include('partials/dark-mode-switch') -%>
        </nav>
      </div>

      <!-- Content -->
      <div class="fr-col-xs-12 fr-col-md-9 fr-py-2w">
        <h1>Composants</h1>

        <div class="fr-mb-6v">
          <div class="fr-callout">
            <h2 class="fr-callout__title">Liste des composants incomplète</h2>
            <p class="fr-callout__text">Cette page est encore loin d'être exhaustive par rapport aux composants contenus dans le DSFR.</p>
          </div>
        </div>


        <div class="fr-col-md-8 fr-col-12">
          <h2 id="boutons">Boutons</h2>
          <h3>Bouton simple</h3>
          <div class="fr-mb-6v">
            <button class="fr-btn" title="Label bouton">
              Bouton simple
            </button>
            <button class="fr-btn" disabled="" title="Label bouton">
              Désactivé
            </button>
          </div>

          <h3>Bouton icon</h3>
          <div class="fr-mb-6v">
            <button class="fr-btn fr-fi-checkbox-line fr-btn--icon-left" title="Label bouton">
              Icône à gauche
            </button>
            <button class="fr-btn fr-fi-checkbox-line fr-btn--icon-right" title="Label bouton">
              Icône à droite
            </button>
            <button class="fr-btn fr-fi-checkbox-line" title="Icône seule">
              Icône seule
            </button>
          </div>                

          <h3>Bouton secondaire</h3>
          <div class="fr-mb-6v">
            <button class="fr-btn fr-btn--secondary" title="Label bouton">
              Bouton secondaire
            </button>
            <button class="fr-btn fr-btn--secondary" disabled="" title="Désactivé">
              Désactivé
            </button>
          </div>
          <div class="fr-mb-6v">
            <button class="fr-btn fr-fi-checkbox-line fr-btn--icon-left fr-btn--secondary" title="Label bouton">
              Icône à gauche
            </button>
            <button class="fr-btn fr-fi-checkbox-line fr-btn--icon-right fr-btn--secondary" title="Label bouton">
              Icône à droite
            </button>
            <button class="fr-btn fr-fi-checkbox-line fr-btn--secondary" title="Icône seule">
              Icône seule
            </button>
          </div>
        </div>

        <h2 id="accordéons">Accordéons</h2>

        <ul class="fr-accordions-group">
          <%- include('partials/accordion-item',
          {
            i: 0,
